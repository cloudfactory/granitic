{
  "LogWriting": {
    "EnableConsoleLogging": true,
    "EnableFileLogging": false,
    "File": {
      "LogPath": "./granitic.log",
      "BufferSize": 50
    },
    "Format": {
      "Entry": "TEXT",
      "UtcTimes":     true,
      "Unset": "-",
      "JSON": {
        "Prefix": "",
        "Fields": [
          {
            "Name": "Message",
            "Content": "MESSAGE"
          }
        ],
        "Suffix": "\n"
      }
    }
  },

  "FrameworkLogger":{
    "GlobalLogLevel": "INFO"
  },
  "ApplicationLogger":{
    "GlobalLogLevel": "INFO"
  }
}